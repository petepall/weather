{
	// "compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"noImplicitAny": true,
		// "typeRoots": [
		//   "./typings"
		// ],
		// "outFile": "./built/combined.js"
		"noImplicitReturns": true,
		"outDir": "./dist",
		"removeComments": true,
		// "rootDir": "./",
		"strict": true,
		"target": "ES2022"
	},
	"ts-node": {
		"esm": true
	},
	"exclude": [
		"./plugins/**/*",
		// "./typings/**/*",
		"./dist/**/*"
	],
	"include": ["./eslint.cjs", "./**/*"]
}
